@{
    // Sayfa basligi olarak Book Page gozukmesi icin
    ViewData["Title"] = "Book Page";
}
@model List<Book>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Book List</h2>
        </div>
    </div>
</div>

<div class="card-body p-4">
        <div class="row pFb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Book" asp-action="Create" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i> Create New Book
                </a>
            </div>
        </div>

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td>
                        <td>@obj.ListPrice</td>
                        <td>@obj.Author</td>
                        <td></td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2">
                                    <!-- asp-route-id => buradaki id HttpGet metodundaki id degisken adi ile ayni olmalidir -->
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

